cmake_minimum_required(VERSION 2.8)

PROJECT(kdevmain)

IF(NOT CMAKE_BUILD_TYPE)
  SET(CMAKE_BUILD_TYPE Debug CACHE STRING
      "Choose the type of build, options are: None Debug Release RelWithDebInfo MinSizeRel MyOne."
      FORCE)
ENDIF(NOT CMAKE_BUILD_TYPE)
#wie setzt man den build type sonst noch ?


# Flags ohne build type gelten immer
# und die build type flags werden angeh√§ngt


SET(CMAKE_C_FLAGS -g1) 
SET(CMAKE_C_FLAGS_DEBUG -g3)
SET(CMAKE_C_FLAGS_RELEASE )

SET(CMAKE_CXX_FLAGS "-pipe -Wall  -Wextra ")#-Wfatal-errors")# stehen bleiben bei error
SET(CMAKE_CXX_FLAGS_DEBUG -ggdb3)
SET(CMAKE_CXX_FLAGS_RELEASE -O2)
SET(CMAKE_CXX_FLAGS_MYONE -My)

include_directories(/usr/include)
include_directories(../Webserver/include)

ADD_LIBRARY(test_funcs testfunktions.c  webserver_api_functions.c websocket_api.c )

